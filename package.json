{
  "name": "CppSnippets",
  "displayName": "C++ Snippets",
  "description": "Custom C++ code snippets for VSCode",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/lakshay/CppSnippets"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:cpp"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "CppSnippets.helloWorld",
      "title": "Hello World"
    }],
    "snippets": [
      {
        "language": "cpp",
        "path": "./snippets/cpp.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
